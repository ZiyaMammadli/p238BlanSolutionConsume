@model List<GenreGetViewModel>;
@{
    int counter = 0;
}
<div class="container">
    <div class="row">
        <div style="display:flex;justify-content:space-between;align-items:center;align-content:center;margin-top:20px;border:1px solid grey;padding:10px">
            <h3 style="margin-bottom:0">Genres</h3>
            <a class="btn-success" style="padding:10px;align-items:center;border-radius:10px" asp-controller="genre" asp-action="create">Create</a>
        </div>
        <table class="table table-striped" style="margin-top:40px;border:1px solid grey">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>                 
                    <th scope="col">Created Date</th>         
                    <th scope="col">Updated Date</th>         
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var genre in Model)
                {
                    counter++;
                    <tr>
                        <th scope="row">@counter</th>
                        <td>@genre.Id</td>
                        <td>@genre.Name</td>
                        <td>@genre.CreatedDate</td>
                        <td>@genre.UpdatedDate</td>
                        <td>
                            <div style="display:flex;">
                                <a style="margin-right:10px;color:white" class="btn btn-warning" asp-controller="genre" asp-action="update" asp-route-id="@genre.Id">Update</a>
                                <a style="color:white" class="btn btn-danger deleteButton" asp-controller="genre" asp-action="delete" asp-route-id="@genre.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>
